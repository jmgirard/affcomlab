@inproceedings{girard2015b,
  title = {How Much Training Data for Facial Action Unit Detection?},
  booktitle = {Proceedings of the 11th {{IEEE International Conference}} on {{Automatic Face}} and {{Gesture Recognition}} ({{FG}})},
