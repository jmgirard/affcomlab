  pmid = {28735709},
  preprint = {https://osf.io/6w23e/},
  primary = {false},
  keywords = {Adult,Depressive Disorder Major,Dissociative Disorders,Female,Humans,Interpersonal Relations,Longitudinal Studies,Male,Mental Disorders,Middle Aged,Personality Disorders,Psychopathology,Social Behavior,Substance-Related Disorders}
}

@inproceedings{girard2017a,
  title = {Historical Heterogeneity Predicts Smiling: Evidence from Large-Scale Observational Analyses},
