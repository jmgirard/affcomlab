  materials = {https://dynamos.mgb.org},
  pmid = {38282890},
  preprint = {https://jmgirard.github.io/dynamos/paper.html},
  primary = {true},
  keywords = {affective computing,Affective computing,content analysis,database,Databases,emotion elicitation,Emotion recognition,Heuristic algorithms,Motion pictures,movie clips,multimodal,Neuroscience,Psychology,subjectivity}
}

@article{girard2025,
