@article{bowdring2021,
  title = {In the Eye of the Beholder: A Comprehensive Analysis of Stimulus Type, Perceiver, and Target in Physical Attractiveness Perceptions},
  shorttitle = {In the Eye of the Beholder},
  author = {Bowdring, Molly A. and Sayette, Michael A. and Girard, Jeffrey M. and Woods, William C.},
