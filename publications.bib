@article{linsalata2024,
  title = {Sources of Environmental Reinforcement and Engagement in Health Risk Behaviors among a General Population Sample of {{US}} Adults},
  author = {L'Insalata, Alexa M. and Girard, Jeffrey M. and Fazzino, Tera L.},
